{
    "author": "Will Hurley <will@wjhurley.com>",
    "bugs": {
        "url": "https://github.com/wjhurley/xmllint-wrapper/issues"
    },
    "description": "Wrapper for `xmllint`. Easy validation of XML. XML Schemas and DTDs supported. Zero dependencies.",
    "devDependencies": {
        "@babel/core": "^7.22.9",
        "@babel/preset-env": "^7.22.9",
        "@babel/preset-typescript": "^7.22.5",
        "@types/node": "^18.7.15",
        "@typescript-eslint/eslint-plugin": "^6.2.0",
        "@typescript-eslint/parser": "^6.2.0",
        "chai": "^4.3.6",
        "chai-as-promised": "^7.1.1",
        "eslint": "^8.45.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-airbnb-typescript": "^17.1.0",
        "eslint-import-resolver-typescript": "^3.5.5",
        "eslint-plugin-es": "^4.1.0",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-putout": "^18.2.0",
        "eslint-plugin-sort-class-members": "^1.18.0",
        "husky": "^8.0.0",
        "lint-staged": "^13.2.3",
        "mocha": "^10.0.0",
        "nyc": "^15.1.0",
        "putout": "^30.5.0",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^4.8.2",
        "typescript-transform-paths": "^3.4.6"
    },
    "files": [
        "lib/",
        "validate-xmllint-installation.js",
        "README.md"
    ],
    "homepage": "https://github.com/wjhurley/xmllint-wrapper#readme",
    "keywords": [
        "dtd",
        "schema",
        "validation",
        "well-formed",
        "xml",
        "xmllint",
        "xsd"
    ],
    "license": "MIT",
    "main": "./lib/index.js",
    "name": "xmllint-wrapper",
    "repository": {
        "type": "git",
        "url": "https://github.com/wjhurley/xmllint-wrapper"
    },
    "scripts": {
        "build": "yarn clean && tsc",
        "clean": "rimraf dist && rimraf tsconfig.tsbuildinfo",
        "lint": "eslint .",
        "lint:diff": "eslint --cache .",
        "lint:staged": "lint-staged",
        "postinstall": "node validate-xmllint-installation.js",
        "prepare": "husky install",
        "prepublishOnly": "yarn build",
        "test": "nyc mocha",
        "watch": "tsc --watch"
    },
    "types": "./lib/index.d.ts",
    "version": "1.2.2"
}
